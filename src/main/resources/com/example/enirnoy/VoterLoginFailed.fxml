<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="200.0" prefWidth="300.0" style="-fx-background-color: white; -fx-border-color: #ff0000; -fx-border-width: 2;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1">
    <children>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="300.0" spacing="10.0">
            <Label style="-fx-text-fill: #ff0000; -fx-font-size: 18px;" text="Login Failed" />
            <Label alignment="CENTER" text="Invalid NID or Key. Please try again." wrapText="true" />
            <Button style="-fx-background-color: #ff0000; -fx-text-fill: white;" text="Close">
                <VBox.margin>
                    <Insets top="10.0" />
                </VBox.margin>
            </Button>
        </VBox>
    </children>
</AnchorPane>
