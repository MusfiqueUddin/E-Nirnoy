            <Font name="Arial Bold" size="14.0" />
         </font>
      </Button>
      <Button layoutX="350.0" layoutY="115.0" mnemonicParsing="false" onAction="#showWomanViceChairmanCandidates" style="-fx-background-color: #ffffff; -fx-border-color: #236025; -fx-border-width: 3px;" text="Woman Vice-Chairman">
         <font>
            <Font name="Arial Bold" size="14.0" />
         </font>
      </Button>
      <VBox layoutX="8.0" layoutY="165.0" prefHeight="182.0" prefWidth="580.0">
         <children>
            <ListView fx:id="candidateListView" prefHeight="189.0" prefWidth="600.0" />
         </children>
      </VBox>
   </children>
</AnchorPane>
