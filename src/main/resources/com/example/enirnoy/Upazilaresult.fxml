<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #8da662;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.enirnoy.UpazilaresultController">
   <children>
      <Label layoutX="-1.0" layoutY="14.0" prefHeight="34.0" prefWidth="600.0" style="-fx-background-color: #ffffff; -fx-border-color: #236025; -fx-border-width: 3px;" text="                                Upazila General Election Result">
