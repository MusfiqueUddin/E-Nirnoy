<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #5f8049;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.enirnoy.CurrentElectionController">
   <children>
      <AnchorPane layoutX="100.0" layoutY="21.0" prefHeight="50.0" prefWidth="419.0" style="-fx-background-color: #ffffff; -fx-border-color: #226b13; -fx-border-width: 4px; -fx-background-radius: 15;">
         <children>
            <Label layoutX="116.0" layoutY="12.0" text="Current Election">
               <font>
                  <Font name="Arial Bold" size="24.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
      <VBox alignment="TOP_CENTER" layoutX="42.0" layoutY="91.0" prefHeight="58.0" prefWidth="518.0">
         <children>
            <ComboBox fx:id="electionComboBox" onAction="#initialize" prefHeight="42.0" prefWidth="350.0" style="-fx-background-color: #ffffff; -fx-border-color: #226b13; -fx-border-width: 3px;" />
         </children>
      </VBox>
      <Button fx:id="saveButton" layoutX="238.0" layoutY="161.0" mnemonicParsing="false" onAction="#handleSaveElection" style="-fx-border-color: #226b13; -fx-border-width: 3px;" text="Saved Election">
         <font>
            <Font name="Arial Bold" size="18.0" />
         </font>
      </Button>
      <VBox fx:id="optionvbox" layoutX="79.0" layoutY="212.0" prefHeight="179.0" prefWidth="459.0" spacing="10.0" visible="false" />
      <ToggleButton fx:id="startButton" layoutX="285.0" layoutY="212.0" mnemonicParsing="false" onAction="#handleStartElection" style="-fx-border-color: #236026; -fx-border-width: 3px;" text="Start">
         <font>
            <Font name="Arial Bold" size="18.0" />
         </font>
      </ToggleButton>
      <ToggleButton fx:id="endButton" layoutX="288.0" layoutY="256.0" mnemonicParsing="false" onAction="#handleEndElection" style="-fx-border-color: #236026; -fx-border-width: 3px;" text="End">
         <font>
            <Font name="Arial Bold" size="18.0" />
         </font>
      </ToggleButton>
      <ToggleButton fx:id="pauseButton" layoutX="279.0" layoutY="302.0" mnemonicParsing="false" onAction="#handlePauseElection" style="-fx-border-color: #236026; -fx-border-width: 3px;" text="Pause">
         <font>
            <Font name="Arial Bold" size="18.0" />
         </font>
      </ToggleButton>
      <ToggleButton fx:id="editButton" layoutX="257.0" layoutY="351.0" mnemonicParsing="false" onAction="#handleEditElection" style="-fx-border-color: #236026; -fx-border-width: 3px;" text="Edit Election">
         <font>
            <Font name="Arial Bold" size="18.0" />
         </font>
      </ToggleButton>
   </children>
</AnchorPane>
