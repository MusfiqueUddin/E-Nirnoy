<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #67859e;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.enirnoy.parliamentresultController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0" spacing="10.0">
         <children>
            <Label prefHeight="27.0" prefWidth="463.0" style="-fx-background-color: #ffffff; -fx-border-color: #396282; -fx-border-width: 3px;" text="           National Parliament Election">
               <font>
                  <Font name="Arial Bold" size="24.0" />
               </font>
            </Label>
            <HBox alignment="TOP_CENTER" prefHeight="50.0" prefWidth="600.0" spacing="10.0">
               <children>
                  <ComboBox fx:id="divisionComboBox" onAction="#initialize" prefWidth="150.0" promptText="Division" style="-fx-border-color: #396282; -fx-border-width: 3px; -fx-background-color: #ffffff;" />
                  <ComboBox fx:id="districtComboBox" onAction="#initialize" prefWidth="150.0" promptText="Division" style="-fx-border-color: #396282; -fx-border-width: 3px; -fx-background-color: #ffffff;" />
               </children>
            </HBox>
            <VBox fx:id="resultsContainer" onDragDetected="#initialize" prefHeight="200.0" prefWidth="100.0" spacing="10.0" style="-fx-padding: 10;" />
         </children>
      </VBox>
   </children>
</AnchorPane>
